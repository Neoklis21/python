tinytuple = (123, 'john')
#Δηλώνεται το περιεχόμενο του tuple
print(tinytuple)
#Εμφανίζεται το περιεχόμενο του tuple



for x in "Καλησπέρα":
  print(x)
#Το πρόγραμμα διαβάζει την λέξη και την εμφανίζει γράμμα προς γράμμα


str = 'Hello World!'
#Σε αυτή την γραμμή δηλώνεται η μεταβλητή str  και δηλώνω τον φράση που θέλω να αποθηκεύσω σε αυτήν
print(str)
#Σε αυτή την γραμμή, το πρόγραμμα εμφανίζει  την αποθηκευμένη φράση της μεταβλητής



shoplist = ["Τυρί", "Αυγά", "Μήλα", "Ντομάτες"]
print("Πρέπει να αγοράσω"', len(shoplist), "πράγματα.")
print("Τα πράγματα αυτά είναι:", end=' ')
#To πρόγραμμα αποθηκεύει την αρχική λίστα
for item in shoplist:
    print(item, end=' ')
print("\nΠρέπει επίσης να αγοράσω μακαρόνια.")
shoplist.append("μακαρόνια")
#Το πρόγραμμα προσθέτει το νέο προίόν στην λίστα
print("Η λίστα αγορών μου τώρα είναι:", shoplist)
print("Θα ταξινομήσω τη λίστα μου τώρα")
shoplist.sort()
#το πργόραμμα ταξινομεί την λίστα
print("Η ταξινομημένη λίστα μου είναι", shoplist)
print("Το πρώτο πράγμα που θα αγοράσω είναι", shoplist[0])
olditem = shoplist[0]
#Το πρόγραμμα εμφανίζει την ταξινομημένη λίστα και το πρώτο προΪόν που θα αγοράσει ο χρήστης
del shoplist[0]
print("Αγόρασα το", olditem)
print("Η λίστα αγορών μου τώρα είναι", shoplist)
#Το πρόγραμμα εμφανίζει την νέα λίστα αγορών
