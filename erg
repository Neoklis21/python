import random
num = random.randint(1, 10)
guess = None
#Το πρόγραμμα διαλέγει έναν τυχαίο αριθμό ανάμεσα στο 1 και στο 10
while guess != num:
#Αρχίζει ο βρόγχος μέχρι να βρεθεί ο τυχαίος αριθμός
    guess = input("Επιλέξτε έναν αριθμό απο το 1 μέχρι το 10: ")
    guess = int(guess)
#Εμφανίζεται η φράση για να επιλεγεί ο αριθμός και το πρόγραμμα τον διαβάζει
    if guess == num:
        print("Συγχαρητήρια, το βρήκες!")
#Το αποτέλεσμα αν ο χρήστης βρει τον αριθμό
    elif  guess > num:
        print("Ο αριθμός είναι μικρότερος!")
#Το αποτέλεσμα αν ο χρηστης διαλέξει μεγαλύτερο αριθμό
    else:
        print("Ο αριθμός είναι μεγαλύτερος")
#Το αποτέλεσμα αν ο χρηστης διαλέξει μικρότερο αριθμό





def greeting(name):
  print("Γειά σας, " + name)
#Εμφανίζεται η φράση μαζί με το όνομα του χρήστη



def printMax(a, b):
if a == b:
    print(a, "Είναι ίσο με το", b)
elif a > b:
    print(a, "Είναι το μέγιστo")
else:
    print(b, "Είναι το μέγιστο")
#Το πρόγραμμα συγκρίνει τις μεταβλητές a,b και εμφανίζει το ανάλογο αποτέλεσμα με το ποιά είναι μεγαλύτερη ή αν είναι ίσες
printMax(3, 4)
